<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script> 
<script>
    var op=document.querySelector("#open");
    var menu=document.querySelector("#menu");
    var clo=document.querySelector("#close");
    op.addEventListener("click",()=>{
        menu.classList.add("max-sm:translate-y-2")
    })
    clo.addEventListener("click",()=>{
        menu.classList.remove("max-sm:translate-y-2")
    })







    const mouse = document.createElement("div");
    const inside = document.createElement("div");

    mouse.classList.add("mouse");
    addEventListener("mousemove", function (dets) {
      gsap.to(".mouse", {
        top: dets.clientY,
        left: dets.clientX,
        duration: 1,
      });
    });
    document.body.appendChild(inside);
    document.body.appendChild(mouse);

    var frame = document.querySelector("[data-hover]");
    var img = document.querySelector("img");
    frame.addEventListener("mousemove", () => {
      gsap.to(".mouse", {
        scale: 11,
        duration: 1.5,
      });
    });

    frame.addEventListener("mouseleave", () => {
      gsap.to(".mouse", {
        scale: 1,
        duration: 1.5,
      });
    });
    img.addEventListener("mousemove", () => {
      gsap.to(".mouse", {
        scale: 5,
        duration: 1.5,
      });
    });

    img.addEventListener("mouseleave", () => {
      gsap.to(".mouse", {
        scale: 1,
        duration: 1.5,
      });
    });
</script>
</body>

</html>